{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["ES2021", "DOM", "esnext",
    "dom.iterable",
    "scripthost"],
    "types": ["node"],

    "paths": {
      "@/*": ["./src/*"]
    },
    "skipLibCheck": true,
    "strict": false,
    "preserveValueImports": false,
    "verbatimModuleSyntax": true,
    "noImplicitAny": false,

    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": false,
    "sourceMap": true,
    
 


  },
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/**/*.d", "src/**/*.ts",
  "src/**/*.vue"],
  "exclude": [
    "node_modules"
  ]

}
